<style>
  .container tbody a{
    color:white;
  }
  .container tbody h5{
    color:black;
  }
  .table td{
    vertical-align:unset;
    text-align:center;
    /* padding: 5px; 12px; */
  }
  .table th{
    text-align:center;
  }
</style>
<div class="container" style="padding-top:3rem; margin-left:6rem;">
  <h3 align="center">고객 센터 Q&A</h3>
  <table class="table m-4 border-bottom">
    <thead>
      <tr>
        <th scope="col">번호</th>
        <th scope="col">제목</th>
        <th scope="col">내용</th>
        <th scope="col">email</th>
        <th scope="col">#</th>
      </tr>
    </thead>
    <tbody>
      <% if @contacts.present? %>
        <% @contacts.each_with_index do |contact,index| %>
          <tr>
            <td>
              <%= link_to contact_path(contact) do %>
                <h5><%= index+1 %></h5>
              <% end %>
            </td>
            <td>
              <%= link_to contact_path(contact) do %>
                <h5><%= contact.title %></h5>
              <% end %>
            </td>
            <td>
              <%= link_to contact_path(contact) do %>
                <h5><%= contact.body %></h5>
              <% end %>
            </td>
            <td>
              <%= link_to contact_path(contact) do %>
                <h5><%= contact.user.email %></h5>
              <% end %>
            </td>
            <td>
              <div class="btn btn-dark mr-2">
                <%= link_to "수정하기", edit_contact_path(contact) %>
              </div>
              <div class="btn btn-dark">
                <%= link_to "삭제하기", contact_path(contact), data:{method: :delete, confirm: "삭제하시겠습니까?"} %>
              </div>
            </td>
          </tr>
        <% end %>
      <% else %>
        <td align="center">
          문의 내역이 없습니다.
        </td>
      <% end %>
    </tbody>
  </table>
  <button type="button" class="btn btn-dark" style="float:right">
    <%= link_to "문의하기", new_contact_path, style:"border-radius:2px; color:white;" %>
  </button>
</div>
