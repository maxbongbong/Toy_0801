<div class="container col-md-4" style="padding:1.5rem; outline:auto; width:23rem; margin-top:5rem;">
  <h2 class="py-3">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", style:"width:20rem;"%>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control", style:"width:20rem;"%>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", style:"width:20rem;"%>
    </div>

    <button class="btn btn-dark mt-2">
      <%= "Sign up" %>
    </button>
    <%= link_to "Log in", new_session_path(resource_name), class:"btn btn-dark mt-2", style:"float:right;" %>
  <% end %>
</div>
